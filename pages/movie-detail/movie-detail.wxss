/* pages/movie-detail/movie-detail.wxss */
page{
  font-size: 24rpx;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 0;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
  filter:blur(20px);
}

.head-img-hover {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.main-title {
  margin: 50rpx 0 0 40rpx;
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
}

.sub-title{
  margin-top: 30rpx;
  margin-left: 40rpx;
  margin: 30rpx 0 0 40rpx;
  font-size: 28rpx;
  color: #fff;
}

.like{
  display: flex;
  flex-direction: row;
  margin: 30rpx 0 0 40rpx;
}
.highlight-font{
  margin-right: 10rpx;
  font-size: 22rpx;
  color: #f21146;
}
.plain-font{
  margin-right: 30rpx;
  color: #ddd;
  font-size: 22rpx;
}

.movie-img{
  position: absolute;
  top: 160rpx;
  right: 30rpx;
  width: 175rpx;
  height: 238rpx;
}

.summary{
  width: calc(100% - 40rpx);
  margin-top: 40px;
  margin-left: 40rpx;
  color: #fff;
}

.original-title{
  margin-bottom: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #1f3463;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 10rpx;
}
.flex-row text{
   font-size: 24rpx;
  color: #666;
}
.flex-row .mark{
  margin-right: 30rpx;
  font-size: 24rpx;
  white-space: nowrap;
  color: #999;
}

.hr{
  width: 750rpx;
  height: 1px;
  margin-top: 45rpx;
  background-color: #d9d9d9;
}

.synopsis{
  display: flex;
  flex-direction: column;
  margin: 50rpx 0 0 40rpx;
}
.synopsis-font{
 color: #999;
}

.summary-content{
  margin: 20rpx 40rpx 0 0;
  line-height: 40rpx;
  letter-spacing: 1rpx;
}

.cast{
  display: flex;
  flex-direction: column;
  width: calc(100% - 40rpx);
  margin: 50rpx 0 40rpx 40rpx;
}

.cast-font{
  margin-bottom: 40rpx;
  color: #999;
}

.cast-imgs{
  white-space: nowrap;
}

.cast-container{
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  margin: 0 40rpx 0 50rpx;
  text-align: center;
  white-space: normal;
}

.cast-img{
  width: 170rpx;
  height: 210rpx;
}
.cast-name{
  margin: 10rpx auto 0;
  word-break: break-all;
}