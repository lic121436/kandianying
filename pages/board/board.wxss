/* pages/board/board.wxss */

.slide {
    width: 100%;
}

.slide .slide-image {
    width: 100%;
    height: 100%;
}

.board {
    display: flex;
    flex-direction: colum;
    flex-wrap: wrap;
    margin-top: 10px;
}

.board .header {
    display: flex;
    flex-direction: colum;
    flex-wrap: wrap;
    width: 100%;
    margin: 0 20rpx 10rpx 20rpx;
    padding: 0 30rpx;
}

.board .header .h1,
.board .header h4 {
    width: 100%;
}

.board .header .h1 {
    font-size: 32rpx;
    font-weight: bold;
}

.board .header .h4 {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #999;
}

.board navigator {
  width:calc(100% - 105rpx);
}

.board .board-item {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    width: 100%;
    padding: 30rpx;
    margin: 10rpx 20rpx;
    border: 1px solid #eee;
    background: #eee;
      cursor: pointer;  
}

.board .board-item text {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.board .board-item image {
    width: 40rpx;
    height: 40rpx;
}